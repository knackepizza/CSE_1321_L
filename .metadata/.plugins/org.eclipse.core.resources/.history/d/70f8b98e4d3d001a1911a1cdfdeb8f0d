import java.util.Scanner;

public class PaintWalls {

	public static void main(String[] args) {
		Scanner scnr = new Scanner(System.in);
		
		int walls, height, width, sqFt;
		String color;
		double gallons;
		
		System.out.print("How many walls would you like painted? ");
		walls = scnr.nextInt();
		
		System.out.print("What is the average height? ");
		height = scnr.nextInt();
		
		System.out.print("What is the average width? ");
		width = scnr.nextInt();
		
		System.out.println("What color paint do you want? ");
		color = scnr.nextLine();
		
		sqFt = ((width * height) * walls);
		
		System.out.println("Painted " + sqFt + "ft^2 of wall the color " + color);
		
		gallons = (sqFt / 400);
	}

}
